# メール設定（必須）
MAIL_FROM=info@ultrasportskimino.jp
# MAIL_FROM=test@ultrasportskimino.jp
MAIL_FROM_NAME=ULTRA SOPRTS KIMINO
MAIL_TO=info@ultrasportskimino.jp
# MAIL_TO=test@ultrasportskimino.jp
# 管理者宛メールの件名（{subject}でフォームの件名を埋め込み可能）
ADMIN_EMAIL_SUBJECT=WEBサイトより問い合わせがありました

# 自動返信メール (true/false)
AUTO_REPLY=true
# 自動返信の送信者名
AUTO_REPLY_FROM_NAME=ULTRA SOPRTS KIMINO
# 自動返信メールの件名
AUTO_REPLY_SUBJECT=[ ULTRA SOPRTS KIMINO ] お問い合わせありがとうございます

# 添付ファイル設定
# 添付ファイルを許可する (true/false)
ALLOW_ATTACHMENT=true
# 最大ファイルサイズ (バイト単位: 5242880 = 5MB)
MAX_FILE_SIZE=5242880
# 許可する拡張子（カンマ区切り）
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,zip

# SMTP設定（オプション：外部SMTPを使う場合のみ設定）
# レンタルサーバーの場合は通常不要（PHPのmail()関数を使用）
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-password
