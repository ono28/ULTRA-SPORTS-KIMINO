{
  "$schema": "https://schemas.wp.org/wp/6.0/theme.json",
  "version": 2,
  "settings": {
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "color": {
      "background": true,
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultGradients": true,
      "defaultPalette": true,
      "duotone": [],
      "gradients": [],
      "link": false,
      "palette": [],
      "text": true
    },
    "typography": {
      "customFontSize": true,
      "lineHeight": false,
      "dropCap": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "textDecoration": true,
      "textTransform": true,
      "fontSizes": [
        {
          "name": "デフォルト",
          "slug": "default",
          "size": "16px"
        },
        {
          "name": "小",
          "slug": "small",
          "size": "12px"
        },
        {
          "name": "中",
          "slug": "medium",
          "size": "18px"
        },
        {
          "name": "大",
          "slug": "large",
          "size": "22px"
        }
      ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1000px"
    }
  }
}
