    siteURL : 'https://fullerene.co.jp',
    siteTITLE : 'フラーレン',
    siteDISCRIPTION : '',
    siteKEYWORDS : null,
    siteOGP : 'ogp.png'
  }

doctype html
html(lang="ja")
  head
    +meta(settings.siteTITLE, settings.siteDISCRIPTION, settings.siteURL, settings.siteKEYWORDS, settings.siteOGP)

    link(type='text/css' rel='stylesheet' href=cssPath + "main.css")
    link(type='text/css' rel='stylesheet' href=cssPath + "top.css")

  |
  |
  |
  body(data-page=`${page}`)
